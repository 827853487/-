% 1. 定义基础主题色（便签黄）
\definecolor{suda}{RGB}{141,94,47}  % 主色调：暖色调的深褐色，用于标题、页脚等重要元素

\setbeamercolor{footline}{bg=suda}
\setbeamercolor{frametitle}{bg=suda,fg=white}
\setbeamercolor{title}{bg=suda}
\setbeamerfont{frametitle}{family=\kaishu, size=\large}
\setbeamerfont{title}{family=\kaishu}
%\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{bibliography item}[text]
\setbeamertemplate{caption}[numbered]

% 不同程度的主题色
\setbeamercolor{palette primary}{use=structure,fg=white,bg=structure.fg}            % 主色调
\setbeamercolor{palette secondary}{use=structure,fg=white,bg=structure.fg!75!black} % 次色调(75%主色+25%黑)
\setbeamercolor{palette tertiary}{use=structure,fg=white,bg=structure.fg!50!black}  % 第三色调(50%主色+50%黑)
\setbeamercolor{palette quaternary}{fg=white,bg=structure.fg!50!black}             % 第四色调
%\setbeamercolor*{sidebar}{use=structure,bg=structure.fg}
\setbeamercolor{titlelike}{parent=palette primary}

%% try
\setbeamercolor{block title}{bg=suda,fg=white}
\setbeamerfont{block title}{family=\kaishu}
\setbeamercolor*{block title example}{use={normal text,example text},bg=,fg=suda} % 文本框小标题
\setbeamercolor{fine separation line}{}
\setbeamercolor{item projected}{fg=white}
\setbeamercolor{palette sidebar primary}{use=normal text,fg=normal text.fg}
\setbeamercolor{palette sidebar quaternary}{use=structure,fg=structure.fg}
\setbeamercolor{palette sidebar secondary}{use=structure,fg=structure.fg}
\setbeamercolor{palette sidebar tertiary}{use=normal text,fg=normal text.fg}
%\setbeamercolor{palette sidebar quaternary}{fg=white}
\setbeamercolor{section in sidebar}{fg=brown}
\setbeamercolor{section in sidebar shaded}{fg=grey}
\setbeamerfont{section in sidebar shaded}{family=\kaishu}

\setbeamercolor{separation line}{}
\setbeamercolor{sidebar}{bg=suda}
\setbeamerfont{sidebar}{family=\kaishu}
\setbeamercolor{sidebar}{parent=palette primary}

\setbeamercolor{alerted text}{fg=suda!75!black}  % 设置 alert 高亮文本的颜色

% 基础结构颜色设置
\setbeamercolor{structure}{fg=suda} % 设置所有结构性元素的默认颜色
\setbeamercolor{subsection in sidebar}{fg=brown}
\setbeamercolor{subsection in sidebar shaded}{fg=grey}
\setbeamerfont{headline}{family=\kaishu}

% 设置颜色和样式
\setbeamercolor{section in toc}{fg=suda}  % 当前章节使用主题色
\setbeamercolor{section in toc shaded}{fg=gray!70}  % 其他章节使用浅灰色（0-100）
\setbeamerfont{section in toc}{family=\kaishu,series=\bfseries}  % 当前章节加粗+楷书
\setbeamerfont{section in toc shaded}{family=\kaishu,series=\normalfont}  % 其他章节正常字重+楷书

